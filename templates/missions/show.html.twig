<!DOCTYPE html>

<title>Missions</title>

{% block body %}
    <h1>Missions</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ mission.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ mission.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ mission.description }}</td>
            </tr>
            <tr>
                <th>CodeName</th>
                <td>{{ mission.codeName }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ mission.type }}</td>
            </tr>
            <tr>
                <th>Agents</th>
                <td>
                    {% for agents in mission.agents %}
						<li>{{agents.lastName}} - {{ agents.nationality}}</li>
					{% endfor %}
                </td>
            </tr>
            <tr>
                <th>Targets</th>
                <td>
                    {% for targets in mission.targets %}
						<li>{{targets.lastName}} - {{ targets.nationality}}</li>
					{% endfor %}
                </td>
            </tr>
            <tr>
                <th>Contacts</th>
                <td>
                    {% for contacts in mission.contacts %}
						<li>{{contacts.lastName}} - {{ contacts.nationality}}</li>
					{% endfor %}
                </td>
            </tr>
            <tr>
                <th>StartDate</th>
                <td>{{ mission.startDate ? mission.startDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>EndDate</th>
                <td>{{ mission.endDate ? mission.endDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>

            <tr>
                <th>Status</th>
                <td>{{ mission.status }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ mission.country}}</td>
            </tr>
            <tr>
                <th>Skills</th>
                <td>{{ mission.skills }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('missions_index') }}">back to list</a>

    <a href="{{ path('missions_edit', {'id': mission.id}) }}">edit</a>

    {{ include('missions/_delete_form.html.twig') }}
{% endblock %}
