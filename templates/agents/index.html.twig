{% extends "layouts/base.html.twig" %}
{% block body %}
    <h1>Agents index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>LastName</th>
                <th>FirstName</th>
                <th>CodeName</th>
                <th>Skills</th>
                <th>DateOfBirth</th>
                <th>Nationality</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for agent in agents %}
            <tr>
                <td>{{ agent.id }}</td>
                <td>{{ agent.lastName }}</td>
                <td>{{ agent.firstName }}</td>
                <td>{{ agent.codeName }}</td>
                <td>{{ agent.skills ? agent.skills|join(', ') : ''  }}</td>
                <td>{{ agent.nationality }}</td>
                <td>
                    <a href="{{ path('agents_show', {'id': agent.id}) }}"> <button class="btn btn-primary">show</button></a>
                    <a href="{{ path('agents_edit', {'id': agent.id}) }}"> <button class="btn btn-warning">edit</button></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('agents_new') }}"><button class="btn btn-success">Cr√©er un nouvel agent</button></a>
{% endblock %}
